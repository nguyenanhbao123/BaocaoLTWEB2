@model BeverageShop.MVC.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-box-seam"></i> Chi tiết đơn hàng #@Model.Id</h1>
        <a asp-action="Orders" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Order Info -->
        <div class="col-md-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Thông tin đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Mã đơn hàng:</div>
                        <div class="col-sm-8">#@Model.Id</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Ngày đặt:</div>
                        <div class="col-sm-8">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm:ss")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Trạng thái:</div>
                        <div class="col-sm-8">
                            @switch (Model.Status)
                            {
                                case "Pending":
                                    <span class="badge bg-warning fs-6">Chờ xử lý</span>
                                    break;
                                case "Confirmed":
                                    <span class="badge bg-info fs-6">Đã xác nhận</span>
                                    break;
                                case "Processing":
                                    <span class="badge bg-primary fs-6">Đang xử lý</span>
                                    break;
                                case "Shipping":
                                    <span class="badge bg-info fs-6">Đang giao hàng</span>
                                    break;
                                case "Delivered":
                                    <span class="badge bg-success fs-6">Đã giao hàng</span>
                                    break;
                                case "Cancelled":
                                    <span class="badge bg-danger fs-6">Đã hủy</span>
                                    break;
                            }
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Thanh toán:</div>
                        <div class="col-sm-8">
                            @Model.PaymentMethod
                            @if (Model.IsPaid)
                            {
                                <span class="badge bg-success ms-2">Đã thanh toán</span>
                            }
                            else
                            {
                                <span class="badge bg-warning ms-2">Chưa thanh toán</span>
                            }
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.VoucherCode))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Mã giảm giá:</div>
                            <div class="col-sm-8">
                                <span class="badge bg-success">@Model.VoucherCode</span>
                                <span class="text-success ms-2">-@Model.DiscountAmount.ToString("N0")đ</span>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Ghi chú:</div>
                            <div class="col-sm-8">@Model.Notes</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Products -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-cart"></i> Sản phẩm</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end">Đơn giá</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.BeverageName</strong>
                                        </td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.Price.ToString("N0")đ</td>
                                        <td class="text-end">@((item.Price * item.Quantity).ToString("N0"))đ</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                @if (Model.DiscountAmount > 0)
                                {
                                    <tr>
                                        <td colspan="3" class="text-end">Tạm tính:</td>
                                        <td class="text-end">@((Model.TotalAmount + Model.DiscountAmount).ToString("N0"))đ</td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" class="text-end text-success">Giảm giá:</td>
                                        <td class="text-end text-success">-@Model.DiscountAmount.ToString("N0")đ</td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="3" class="text-end fw-bold">Tổng cộng:</td>
                                    <td class="text-end fw-bold text-danger fs-5">@Model.TotalAmount.ToString("N0")đ</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Customer Info & Actions -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-person"></i> Thông tin khách hàng</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small">Họ tên:</label>
                        <div class="fw-bold">@Model.CustomerName</div>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small">Email:</label>
                        <div>@Model.CustomerEmail</div>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small">Số điện thoại:</label>
                        <div>@Model.CustomerPhone</div>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small">Địa chỉ giao hàng:</label>
                        <div>@Model.ShippingAddress</div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> Cập nhật trạng thái</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateOrderStatus" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label class="form-label">Trạng thái mới:</label>
                            <select name="status" class="form-select" required>
                                <option value="Pending" selected="@(Model.Status == "Pending")">Chờ xử lý</option>
                                <option value="Confirmed" selected="@(Model.Status == "Confirmed")">Đã xác nhận</option>
                                <option value="Processing" selected="@(Model.Status == "Processing")">Đang xử lý</option>
                                <option value="Shipping" selected="@(Model.Status == "Shipping")">Đang giao hàng</option>
                                <option value="Delivered" selected="@(Model.Status == "Delivered")">Đã giao hàng</option>
                                <option value="Cancelled" selected="@(Model.Status == "Cancelled")">Đã hủy</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-check-circle"></i> Cập nhật
                        </button>
                    </form>

                    <hr class="my-3" />

                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-success btn-sm" onclick="printOrder()">
                            <i class="bi bi-printer"></i> In đơn hàng
                        </button>
                        <a href="mailto:@Model.CustomerEmail" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-envelope"></i> Gửi email
                        </a>
                        <a href="tel:@Model.CustomerPhone" class="btn btn-outline-info btn-sm">
                            <i class="bi bi-telephone"></i> Gọi điện
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function printOrder() {
        window.print();
    }
</script>
}

@section Styles {
<style>
    @@media print {
        .btn, .card-header h5 i, nav, footer {
            display: none !important;
        }
    }
</style>
}
