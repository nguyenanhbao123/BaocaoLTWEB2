@model BeverageShop.MVC.Controllers.DashboardStats

@{
    ViewData["Title"] = "Dashboard - Admin";
}

<div class="container-fluid mt-4" id="dashboardContainer">
    <!-- Loading Overlay -->
    <div id="loadingOverlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 9999;">
        <div class="d-flex justify-content-center align-items-center h-100">
            <div class="spinner-border text-light" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-speedometer2"></i> Dashboard Quản Trị</h1>
        <div>
            <button onclick="refreshDashboard()" class="btn btn-sm btn-success">
                <i class="bi bi-arrow-clockwise"></i> Làm mới
            </button>
            <span class="badge bg-success ms-2">Admin</span>
            <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-primary ms-2">
                <i class="bi bi-house"></i> Về trang chủ
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Tổng người dùng</h6>
                            <h2 class="mb-0">@Model.TotalUsers</h2>
                        </div>
                        <div class="text-primary" style="font-size: 3rem;">
                            <i class="bi bi-people"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0">
                    <a asp-action="Users" class="text-decoration-none small">
                        Xem chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Tổng đơn hàng</h6>
                            <h2 class="mb-0">@Model.TotalOrders</h2>
                            <small class="text-warning">
                                <i class="bi bi-clock"></i> @Model.PendingOrders đang chờ
                            </small>
                        </div>
                        <div class="text-success" style="font-size: 3rem;">
                            <i class="bi bi-cart-check"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0">
                    <a asp-action="Orders" class="text-decoration-none small">
                        Xem chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Doanh thu</h6>
                            <h2 class="mb-0">@Model.TotalRevenue.ToString("N0")đ</h2>
                        </div>
                        <div class="text-danger" style="font-size: 3rem;">
                            <i class="bi bi-currency-dollar"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0">
                    <a asp-action="Orders" class="text-decoration-none small">
                        Xem tất cả đơn hàng <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Sản phẩm</h6>
                            <h2 class="mb-0">@Model.TotalBeverages</h2>
                            @if (Model.LowStockItems > 0)
                            {
                                <small class="text-danger">
                                    <i class="bi bi-exclamation-triangle"></i> @Model.LowStockItems sắp hết
                                </small>
                            }
                        </div>
                        <div class="text-info" style="font-size: 3rem;">
                            <i class="bi bi-cup-straw"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0">
                    <a asp-action="Beverages" class="text-decoration-none small">
                        Xem chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Thao tác nhanh</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a asp-action="CreateBeverage" class="btn btn-outline-primary w-100 py-3">
                                <i class="bi bi-plus-circle"></i><br />
                                Thêm sản phẩm mới
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="CreateVoucher" class="btn btn-outline-success w-100 py-3">
                                <i class="bi bi-ticket-perforated"></i><br />
                                Tạo mã giảm giá
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="Orders" class="btn btn-outline-warning w-100 py-3">
                                <i class="bi bi-box-seam"></i><br />
                                Quản lý đơn hàng
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="Users" class="btn btn-outline-info w-100 py-3">
                                <i class="bi bi-people"></i><br />
                                Quản lý người dùng
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Orders by Status -->
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Đơn hàng theo trạng thái</h5>
                </div>
                <div class="card-body">
                    @if (Model.OrdersByStatus.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var status in Model.OrdersByStatus)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <span>
                                        @switch (status.Key)
                                        {
                                            case "Pending":
                                                <i class="bi bi-clock text-warning"></i>
                                                <span>Chờ xử lý</span>
                                                break;
                                            case "Confirmed":
                                                <i class="bi bi-check-circle text-info"></i>
                                                <span>Đã xác nhận</span>
                                                break;
                                            case "Processing":
                                                <i class="bi bi-gear text-primary"></i>
                                                <span>Đang xử lý</span>
                                                break;
                                            case "Shipping":
                                                <i class="bi bi-truck text-info"></i>
                                                <span>Đang giao</span>
                                                break;
                                            case "Delivered":
                                                <i class="bi bi-check2-circle text-success"></i>
                                                <span>Đã giao</span>
                                                break;
                                            case "Cancelled":
                                                <i class="bi bi-x-circle text-danger"></i>
                                                <span>Đã hủy</span>
                                                break;
                                        }
                                    </span>
                                    <span class="badge bg-primary rounded-pill">@status.Value</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">Chưa có đơn hàng</p>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Orders -->
        <div class="col-md-8 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Đơn hàng gần đây</h5>
                    <a asp-action="Orders" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Mã ĐH</th>
                                        <th>Khách hàng</th>
                                        <th>Ngày đặt</th>
                                        <th class="text-end">Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders.Take(5))
                                    {
                                        <tr>
                                            <td><strong>#@order.Id</strong></td>
                                            <td>@order.CustomerName</td>
                                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="text-end">@order.TotalAmount.ToString("N0")đ</td>
                                            <td>
                                                @switch (order.Status)
                                                {
                                                    case "Pending":
                                                        <span class="badge bg-warning">Chờ xử lý</span>
                                                        break;
                                                    case "Confirmed":
                                                        <span class="badge bg-info">Đã xác nhận</span>
                                                        break;
                                                    case "Processing":
                                                        <span class="badge bg-primary">Đang xử lý</span>
                                                        break;
                                                    case "Shipping":
                                                        <span class="badge bg-info">Đang giao</span>
                                                        break;
                                                    case "Delivered":
                                                        <span class="badge bg-success">Đã giao</span>
                                                        break;
                                                    case "Cancelled":
                                                        <span class="badge bg-danger">Đã hủy</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">Chưa có đơn hàng</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function refreshDashboard() {
            document.getElementById('loadingOverlay').style.display = 'block';
            location.reload();
        }

        // Auto hide loading after page load
        window.addEventListener('load', function() {
            document.getElementById('loadingOverlay').style.display = 'none';
        });
    </script>
}

@section Styles {
<style>
    .card {
        transition: transform 0.2s;
    }
    .card:hover {
        transform: translateY(-5px);
    }
</style>
}
