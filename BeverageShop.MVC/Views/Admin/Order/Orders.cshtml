@model IEnumerable<BeverageShop.MVC.Models.Order>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1><i class="bi bi-box-seam"></i> Đơn hàng của tôi</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Đơn hàng</li>
                </ol>
            </nav>
        </div>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
    <hr />

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Mã đơn</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Thanh toán</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><strong>#@order.Id</strong></td>
                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-danger"><strong>@order.TotalAmount.ToString("N0") đ</strong></td>
                            <td>
                                @{
                                    var badgeClass = order.Status.ToString() switch
                                    {
                                        "Pending" => "bg-warning",
                                        "Confirmed" => "bg-info",
                                        "Processing" => "bg-primary",
                                        "Shipping" => "bg-info",
                                        "Delivered" => "bg-success",
                                        "Cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                    var statusText = order.Status.ToString() switch
                                    {
                                        "Pending" => "Chờ xác nhận",
                                        "Confirmed" => "Đã xác nhận",
                                        "Processing" => "Đang xử lý",
                                        "Shipping" => "Đang giao",
                                        "Delivered" => "Đã giao",
                                        "Cancelled" => "Đã hủy",
                                        _ => order.Status.ToString()
                                    };
                                }
                                <span class="badge @badgeClass">@statusText</span>
                            </td>
                            <td>
                                @if (order.IsPaid)
                                {
                                    <span class="badge bg-success">Đã thanh toán</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Chưa thanh toán</span>
                                }
                            </td>
                            <td>
                                <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Bạn chưa có đơn hàng nào.
            <a asp-controller="Shop" asp-action="Index" class="alert-link">Mua sắm ngay!</a>
        </div>
    }
</div>
