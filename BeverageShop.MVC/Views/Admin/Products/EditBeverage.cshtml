@model BeverageShop.MVC.Models.Beverage
@{
    ViewData["Title"] = "Sửa Đồ Uống";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Sửa Đồ Uống</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditBeverage" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Tên đồ uống <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label">Danh mục <span class="text-danger">*</span></label>
                            <input asp-for="Category" class="form-control" list="categoryList" required />
                            <datalist id="categoryList">
                                <option value="Cà phê"></option>
                                <option value="Trà"></option>
                                <option value="Nước ép"></option>
                                <option value="Sinh tố"></option>
                                <option value="Soda"></option>
                            </datalist>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Type" class="form-label">Loại <span class="text-danger">*</span></label>
                                <input asp-for="Type" class="form-control" required />
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Size" class="form-label">Size <span class="text-danger">*</span></label>
                                <select asp-for="Size" class="form-select" required>
                                    <option value="S">Size S</option>
                                    <option value="M">Size M</option>
                                    <option value="L">Size L</option>
                                    <option value="XL">Size XL</option>
                                </select>
                                <span asp-validation-for="Size" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label">Giá (VNĐ) <span class="text-danger">*</span></label>
                                <input asp-for="Price" type="number" step="1000" class="form-control" required />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Stock" class="form-label">Số lượng <span class="text-danger">*</span></label>
                                <input asp-for="Stock" type="number" class="form-control" required />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hình ảnh</label>
                            
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="mb-2">
                                    <img src="@Model.ImageUrl" alt="Preview" class="img-thumbnail" style="max-height: 150px;" 
                                         onerror="this.src='https://via.placeholder.com/150?text=No+Image'" />
                                </div>
                            }
                            
                            <!-- Option 1: URL -->
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="imageOption" id="urlOption" value="url" checked>
                                    <label class="form-check-label" for="urlOption">
                                        <strong>Nhập URL ảnh mới</strong>
                                    </label>
                                </div>
                                <input asp-for="ImageUrl" type="text" class="form-control mt-2" id="imageUrlInput" 
                                       placeholder="https://example.com/image.jpg hoặc /images/product.jpg" />
                                <small class="form-text text-muted">
                                    <i class="bi bi-info-circle"></i> Để trống nếu giữ nguyên ảnh cũ
                                </small>
                            </div>

                            <!-- Option 2: Upload File -->
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="imageOption" id="uploadOption" value="upload">
                                    <label class="form-check-label" for="uploadOption">
                                        <strong>Hoặc upload ảnh mới từ máy tính</strong>
                                    </label>
                                </div>
                                <input type="file" class="form-control mt-2" id="imageFileInput" accept="image/*" disabled />
                                <small class="form-text text-muted">
                                    <i class="bi bi-info-circle"></i> Chức năng upload đang phát triển
                                </small>
                            </div>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                            <label asp-for="IsAvailable" class="form-check-label">
                                Còn hàng
                            </label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Beverages" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-warning text-dark">
                                <i class="bi bi-check-circle"></i> Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Toggle between URL input and file upload
            $('input[name="imageOption"]').change(function() {
                if ($(this).val() === 'url') {
                    $('#imageUrlInput').prop('disabled', false).focus();
                    $('#imageFileInput').prop('disabled', true).val('');
                } else {
                    $('#imageUrlInput').prop('disabled', true).val('');
                    $('#imageFileInput').prop('disabled', false);
                }
            });
        });
    </script>
}
