@model BeverageShop.MVC.Models.User
@{
    ViewData["Title"] = "Sửa Người Dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header @(Model.Username == "admin" ? "bg-info text-white" : "bg-warning text-dark")">
                    <h3 class="mb-0">
                        <i class="bi @(Model.Username == "admin" ? "bi-eye" : "bi-pencil-square")"></i> 
                        @(Model.Username == "admin" ? "Xem Thông Tin Tài Khoản Hệ Thống" : "Sửa Thông Tin Người Dùng")
                    </h3>
                </div>
                <div class="card-body">
                    @if (Model.Username == "admin")
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>Tài khoản hệ thống:</strong> Không thể thay đổi vai trò, trạng thái hoặc xóa tài khoản này. Chỉ có thể cập nhật thông tin cá nhân.
                        </div>
                    }
                    <form asp-action="EditUser" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Username" class="form-label">Tên đăng nhập</label>
                                <input asp-for="Username" class="form-control" readonly />
                                <small class="form-text text-muted">Không thể thay đổi tên đăng nhập</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                                <input asp-for="Email" type="email" class="form-control" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="FullName" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                            <input asp-for="FullName" class="form-control" required />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Phone" class="form-label">Số điện thoại</label>
                                <input asp-for="Phone" type="tel" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="Role" class="form-label">Vai trò <span class="text-danger">*</span></label>
                                <select asp-for="Role" class="form-select" required disabled="@(Model.Username == "admin")">
                                    <option value="Customer">Khách hàng</option>
                                    <option value="Admin">Admin</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                                @if (Model.Username == "admin")
                                {
                                    <small class="text-muted">
                                        <i class="bi bi-lock"></i> Không thể thay đổi vai trò tài khoản hệ thống
                                    </small>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="Address" class="form-label">Địa chỉ</label>
                            <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" disabled="@(Model.Username == "admin")" />
                            <label asp-for="IsActive" class="form-check-label">
                                Tài khoản hoạt động
                            </label>
                            @if (Model.Username == "admin")
                            {
                                <br />
                                <small class="text-muted">
                                    <i class="bi bi-lock"></i> Tài khoản hệ thống luôn hoạt động
                                </small>
                            }
                        </div>

                        @if (Model.Username != "admin")
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle"></i> 
                                <strong>Lưu ý:</strong> Nếu bỏ tích "Tài khoản hoạt động", người dùng sẽ không thể đăng nhập.
                            </div>
                        }

                        <div class="d-flex justify-content-between">
                            <a asp-action="Users" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại danh sách
                            </a>
                            @if (Model.Username == "admin")
                            {
                                <button type="submit" class="btn btn-info text-white">
                                    <i class="bi bi-check-circle"></i> Cập nhật thông tin
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-warning text-dark">
                                    <i class="bi bi-check-circle"></i> Cập nhật
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
