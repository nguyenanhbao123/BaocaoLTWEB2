@model BeverageShop.MVC.Models.User
@{
    ViewData["Title"] = "Thêm Người Dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-person-plus"></i> Thêm Người Dùng Mới</h3>
                </div>
                <div class="card-body">
                    <form asp-action="CreateUser" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Username" class="form-label">Tên đăng nhập <span class="text-danger">*</span></label>
                                <input asp-for="Username" class="form-control" placeholder="VD: nguyenvana" required />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="VD: user@example.com" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                            <input type="password" name="password" class="form-control" placeholder="Tối thiểu 6 ký tự" required minlength="6" />
                            <small class="form-text text-muted">Mật khẩu phải có ít nhất 6 ký tự</small>
                        </div>

                        <div class="mb-3">
                            <label for="FullName" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                            <input asp-for="FullName" class="form-control" placeholder="VD: Nguyễn Văn A" required />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Phone" class="form-label">Số điện thoại</label>
                                <input asp-for="Phone" type="tel" class="form-control" placeholder="VD: 0123456789" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="Role" class="form-label">Vai trò <span class="text-danger">*</span></label>
                                <select asp-for="Role" class="form-select" required>
                                    <option value="Customer">Khách hàng</option>
                                    <option value="Admin">Admin</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="Address" class="form-label">Địa chỉ</label>
                            <textarea asp-for="Address" class="form-control" rows="2" placeholder="VD: 123 Đường ABC, Quận XYZ, Hà Nội"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> 
                            <strong>Lưu ý:</strong> Tài khoản mới sẽ được tạo với trạng thái "Hoạt động" mặc định.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Users" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại danh sách
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Tạo tài khoản
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
