@model List<BeverageShop.MVC.Models.User>
@{
    ViewData["Title"] = "Quản Lý Người Dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people-fill text-primary"></i> Quản Lý Người Dùng</h2>
        <div>
            <a asp-action="CreateUser" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Thêm người dùng
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại Dashboard
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            @if (Model == null || Model.Count == 0)
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle fs-3"></i>
                    <p class="mb-0 mt-2">Chưa có người dùng nào trong hệ thống.</p>
                    <p class="text-muted mb-0">Người dùng sẽ được tạo tự động khi đăng ký tài khoản.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Họ Tên</th>
                                <th>Email</th>
                                <th>Số Điện Thoại</th>
                                <th>Địa Chỉ</th>
                                <th>Vai Trò</th>
                                <th>Trạng Thái</th>
                                <th class="text-center" style="width: 180px;">Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td><strong>#@user.Id</strong></td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle bg-primary text-white me-2">
                                                @(user.FullName?.Substring(0, 1).ToUpper() ?? "U")
                                            </div>
                                            <div>
                                                <div>@user.FullName</div>
                                                @if (user.Username == "admin")
                                                {
                                                    <small class="badge bg-warning text-dark">
                                                        <i class="bi bi-star-fill"></i> Hệ thống
                                                    </small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @user.Email
                                        <br />
                                        <small class="text-muted">@("@" + user.Username)</small>
                                    </td>
                                    <td>@(user.Phone ?? "Chưa cập nhật")</td>
                                    <td>@(user.Address ?? "Chưa cập nhật")</td>
                                    <td>
                                        @if (user.Role == UserRole.Admin)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-shield-check"></i> Admin
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-person"></i> Khách hàng
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Hoạt động
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-x-circle"></i> Bị khóa
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (user.Username == "admin")
                                        {
                                            <!-- Tài khoản hệ thống - chỉ được xem -->
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="EditUser" asp-route-id="@user.Id" 
                                                   class="btn btn-outline-info" title="Xem thông tin">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <button type="button" class="btn btn-outline-secondary" disabled 
                                                        title="Không thể thay đổi tài khoản hệ thống">
                                                    <i class="bi bi-lock-fill"></i>
                                                </button>
                                            </div>
                                            <div class="mt-1">
                                                <small class="text-muted">
                                                    <i class="bi bi-shield-lock-fill"></i> Bảo vệ
                                                </small>
                                            </div>
                                        }
                                        else
                                        {
                                            <!-- Tài khoản thường - có thể sửa/xóa -->
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="EditUser" asp-route-id="@user.Id" 
                                                   class="btn btn-outline-warning" title="Sửa">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                @if (user.Role == UserRole.Customer)
                                                {
                                                    <form asp-action="UpdateUserRole" method="post" class="d-inline">
                                                        <input type="hidden" name="userId" value="@user.Id" />
                                                        <input type="hidden" name="role" value="Admin" />
                                                        <button type="submit" class="btn btn-outline-danger" title="Lên Admin"
                                                                onclick="return confirm('⚠️ Cấp quyền Admin cho @user.FullName?\n\nAdmin có toàn quyền quản trị hệ thống!')">
                                                            <i class="bi bi-arrow-up-circle"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    var adminCount = Model.Count(u => u.Role == UserRole.Admin);
                                                    if (adminCount > 1)
                                                    {
                                                        <form asp-action="UpdateUserRole" method="post" class="d-inline">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <input type="hidden" name="role" value="Customer" />
                                                            <button type="submit" class="btn btn-outline-success" title="Xuống User"
                                                                    onclick="return confirm('Hạ quyền @user.FullName xuống Khách hàng?')">
                                                                <i class="bi bi-arrow-down-circle"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <button type="button" class="btn btn-outline-secondary" disabled 
                                                                title="Phải có ít nhất 1 Admin trong hệ thống">
                                                            <i class="bi bi-shield-lock"></i>
                                                        </button>
                                                    }
                                                }
                                                <button type="button" class="btn btn-outline-danger" 
                                                        onclick="confirmDelete(@user.Id, '@user.FullName')" title="Xóa">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <p class="text-muted mb-0">
                        <i class="bi bi-info-circle"></i> Tổng cộng: <strong>@Model.Count</strong> người dùng
                        | Hoạt động: <strong>@Model.Count(u => u.IsActive)</strong>
                        | Admin: <strong>@Model.Count(u => u.Role == UserRole.Admin)</strong>
                    </p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Hidden form for delete -->
<form id="deleteForm" asp-action="DeleteUser" method="post" style="display: none;">
    <input type="hidden" id="deleteId" name="id" />
</form>

<style>
    .avatar-circle {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 14px;
    }
</style>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            if (confirm('Bạn có chắc muốn xóa người dùng "' + name + '"?\n\nHành động này không thể hoàn tác!')) {
                document.getElementById('deleteId').value = id;
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}
