@using BeverageShop.MVC.Models
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeverageShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <div class="top-header bg-light py-2">
            <div class="container-fluid">
                <div class="row align-items-center small">
                    <div class="col-md-6">
                        <span class="me-3"><i class="bi bi-telephone text-danger"></i> Hotline: 1800.2097</span>
                        <span><i class="bi bi-envelope text-danger"></i> contact@beverageshop.vn</span>
                    </div>
                    <div class="col-md-6 text-end">
                        @{
                            var userJson = Context.Session.GetString("CurrentUser");
                            var isLoggedIn = !string.IsNullOrEmpty(userJson);
                            User? topUser = null;
                            if (isLoggedIn && userJson != null)
                            {
                                topUser = System.Text.Json.JsonSerializer.Deserialize<User>(userJson);
                            }
                        }
                        @if (isLoggedIn && topUser != null && topUser.Role == UserRole.Admin)
                        {
                            <a href="/admin" class="text-decoration-none text-danger me-3 fw-bold"><i class="bi bi-speedometer2"></i> Quản trị</a>
                        }
                        <a href="/Shop/Wishlist" class="text-decoration-none text-dark me-3"><i class="bi bi-heart"></i> Yêu thích</a>
                        <a href="/Account/Orders" class="text-decoration-none text-dark"><i class="bi bi-box-seam"></i> Đơn hàng</a>
                    </div>
                </div>
            </div>
        </div>

        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-danger" href="/">
                    <i class="bi bi-cup-hot-fill"></i> BeverageShop
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Shop/Category/Trà">Trà</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Shop/Category/Cà phê">Cà phê</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Shop/Category/Nước ép">Nước ép</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Shop/Category/Sinh tố">Sinh tố</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Shop/Category/Phụ kiện">Phụ kiện</a>
                        </li>
                    </ul>
                    <form class="d-flex me-3" asp-controller="Shop" asp-action="Index" method="get">
                        <input class="form-control me-2" type="search" name="search" placeholder="Tìm kiếm..." aria-label="Search">
                        <button class="btn btn-outline-danger" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                    <div class="d-flex align-items-center">
                        <a href="/Shop/Cart" class="btn btn-outline-danger position-relative me-3">
                            <i class="bi bi-cart3"></i>
                            @{
                                var cart = Context.Session.GetString("Cart");
                                int cartCount = 0;
                                if (!string.IsNullOrEmpty(cart))
                                {
                                    var cartItems = System.Text.Json.JsonSerializer.Deserialize<List<CartItem>>(cart);
                                    cartCount = cartItems?.Sum(x => x.Quantity) ?? 0;
                                }
                            }
                            @if (cartCount > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    @cartCount
                                </span>
                            }
                        </a>
                        @{
                            var currentUserJson = Context.Session.GetString("CurrentUser");
                            var isUserLoggedIn = !string.IsNullOrEmpty(currentUserJson);
                            User? currentUser = null;
                            if (isUserLoggedIn && currentUserJson != null)
                            {
                                currentUser = System.Text.Json.JsonSerializer.Deserialize<User>(currentUserJson);
                            }
                        }
                        @if (isUserLoggedIn && currentUser != null)
                        {
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @currentUser.FullName
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" href="/Account/Profile"><i class="bi bi-person"></i> Tài khoản</a></li>
                                    <li><a class="dropdown-item" href="/Account/Orders"><i class="bi bi-box-seam"></i> Đơn hàng</a></li>
                                    <li><a class="dropdown-item" href="/Shop/Wishlist"><i class="bi bi-heart"></i> Yêu thích</a></li>
                                    @if (currentUser.Role == UserRole.Admin)
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-danger fw-bold" href="/admin"><i class="bi bi-speedometer2"></i> Quản trị</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/Account/Logout"><i class="bi bi-box-arrow-right"></i> Đăng xuất</a></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a href="/Account/Login" class="btn btn-danger">
                                <i class="bi bi-person"></i> Đăng nhập
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5 class="text-danger">BeverageShop</h5>
                    <p>Cửa hàng đồ uống chất lượng cao, phục vụ tận tâm.</p>
                    <div class="social-links">
                        <a href="#" class="text-white me-3"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white me-3"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-white me-3"><i class="bi bi-twitter"></i></a>
                    </div>
                </div>
                <div class="col-md-4">
                    <h6>Liên hệ</h6>
                    <p class="mb-1"><i class="bi bi-telephone"></i> Hotline: 1800.2097</p>
                    <p class="mb-1"><i class="bi bi-envelope"></i> contact@beverageshop.vn</p>
                    <p class="mb-1"><i class="bi bi-geo-alt"></i> Hà Nội, Việt Nam</p>
                </div>
                <div class="col-md-4">
                    <h6>Hỗ trợ khách hàng</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none">Chính sách đổi trả</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Chính sách vận chuyển</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Điều khoản sử dụng</a></li>
                    </ul>
                </div>
            </div>
            <hr class="bg-secondary" />
            <div class="text-center">
                <small>&copy; 2025 BeverageShop. All rights reserved.</small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>